<Window
    Height="450"
    Title="GetInfo"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_11.Pages.GetInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_11.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Покращений градієнт фону -->
    <Window.Background>
        <LinearGradientBrush EndPoint="1,2" StartPoint="0,0">
            <GradientStop Color="#F2F3F4" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <!-- Стилі з зовнішнього файлу -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Інформація про кімнату -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                Margin="0,0,0,20">
                <TextBlock
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Text="Інформація про кімнату" />

                <TextBlock FontSize="16" Foreground="#34495E" Margin="0,10,0,5" Text="Номер кімнати:" />
                <TextBox
                    Margin="0,5,0,15"
                    Text="{Binding Room.Number, Mode=TwoWay}"
                    Width="250"
                    Foreground="#2C3E50"
                    Padding="5" />

                <TextBlock FontSize="16" Foreground="#34495E" Margin="0,10,0,5" Text="Місткість:" />
                <TextBox
                    Margin="0,5,0,15"
                    Text="{Binding Room.Capacity, Mode=TwoWay}"
                    Width="250"
                    Foreground="#2C3E50"
                    Padding="5" />

                <Button
                    Click="SaveChangesButton_Click"
                    Content="Зберегти зміни"
                    Width="170"
                    Height="40"
                    HorizontalAlignment="Center"
                    Margin="20,10,0,0" />
            </StackPanel>

            <!-- Відгуки -->
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center">
                <TextBlock
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Text="Відгуки"
                    Margin="0,20,0,20" />

                <ItemsControl ItemsSource="{Binding Reviews}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderBrush="#ABB2B9"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="5"
                                Padding="15"
                                Background="#F9EBEA">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="#2C3E50"
                                        Text="{Binding Text}" />

                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#7F8C8D"
                                        HorizontalAlignment="Right"
                                        Margin="0,10,0,0"
                                        Text="{Binding Date}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
