<Window
    Height="450"
    Title="MainWindow"
    Width="700"
    WindowStartupLocation="CenterScreen"
    x:Class="lab2_11.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Background>
        <LinearGradientBrush EndPoint="1,2" StartPoint="0,0">
            <GradientStop Color="LightGray" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <!--  Верхня частина для пошуку і додавання кімнат  -->
        <StackPanel
            HorizontalAlignment="Center"
            Margin="0,10,0,20"
            Orientation="Vertical"
            VerticalAlignment="Top">
            <!--  Пошуковий рядок  -->
            <TextBox
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"
                Text="{Binding Search.SearchText, UpdateSourceTrigger=PropertyChanged}"
                TextChanged="SearchBox_TextChanged"
                Width="250">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border
                                        Background="White"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Grid>
                                            <TextBox
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="5,0,5,0"
                                                Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                VerticalContentAlignment="Center" />
                                            <TextBlock
                                                Foreground="DarkGray"
                                                HorizontalAlignment="Left"
                                                IsHitTestVisible="False"
                                                Margin="5,0,0,0"
                                                Text="Введіть номер кімнати для пошуку..."
                                                VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <!--  Кнопка додавання кімнати  -->
            <Button
                Click="AddRoom_Click"
                Content="Додати кімнату"
                Height="30"
                HorizontalAlignment="Center"
                Width="150" />
        </StackPanel>

        <!--  Панель для відображення кімнат  -->
        <Border
            BorderBrush="Gray"
            BorderThickness="1"
            Height="300"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom">
            <ScrollViewer
                HorizontalScrollBarVisibility="Disabled"
                Padding="10"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding FilteredRooms}"
                    Name="RoomItemsControl"
                    VerticalAlignment="Top">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Click="ButtonClick"
                                Content="{Binding Number}"
                                Height="50"
                                Margin="5"
                                Width="100">
                                <Button.ToolTip>
                                    <ToolTip Content="Натисніть ПКМ для додаткових опцій" />
                                </Button.ToolTip>
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="CheckIn_Click" Header="Заселення" />
                                        <MenuItem Click="CheckOut_Click" Header="Виселення" />
                                        <MenuItem Click="EditRoom_Click" Header="Редагування інформації" />
                                        <MenuItem Click="FineRoom_Click" Header="Нарахувати штраф" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
