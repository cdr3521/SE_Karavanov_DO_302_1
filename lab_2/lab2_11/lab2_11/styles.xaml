<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для кнопок -->
    <Style TargetType="Button">
        <!-- Основний колір кнопки змінено на темно-синій -->
        <Setter Property="Background" Value="#2C3E50" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <!-- Текст кнопки змінено на світлий колір -->
        <Setter Property="Foreground" Value="#ECF0F1" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!-- Колір при наведенні змінено на світло-синій -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#34495E" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для рамок -->
    <Style TargetType="Border">
        <!-- Фон рамки змінено на світло-сірий -->
        <Setter Property="Background" Value="#D5D8DC" />
    </Style>

    <!-- Стиль для заголовків/міток -->
    <Style TargetType="TextBlock" x:Key="LabelStyle">
        <Setter Property="FontWeight" Value="Bold" />
        <!-- Текст заголовків змінено на темно-зелений -->
        <Setter Property="Foreground" Value="#27AE60" />
        <Setter Property="Margin" Value="0,0,10,10" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Стиль для відображення значень -->
    <Style TargetType="TextBlock" x:Key="ValueStyle">
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Padding" Value="6" />
        <!-- Фон для значень змінено на світло-зелений -->
        <Setter Property="Background" Value="#A9DFBF" />
        <!-- Колір тексту для значень змінено на темно-синій -->
        <Setter Property="Foreground" Value="#1C2833" />
    </Style>

</ResourceDictionary>
