<Window
    Height="450"
    Title="Fine"
    Width="350"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_11.Pages.FinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_11.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Покращений фон -->
    <Window.Background>
        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F2F3F4" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <!-- Зовнішні стилі -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center">
            
            <!-- Введення розміру штрафу -->
            <StackPanel Margin="0,0,0,20" Orientation="Vertical">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#34495E"
                    Margin="0,0,0,10"
                    Text="Введіть розмір штрафу:" />
                <TextBox
                    Width="200"
                    Padding="8"
                    Text="{Binding Fine.Amount}"
                    Foreground="#2C3E50"
                    BorderBrush="#ABB2B9"
                    BorderThickness="1"
                    Margin="0,5,0,15" />
            </StackPanel>

            <!-- Поточний штраф -->
            <StackPanel Margin="0,0,0,20" Orientation="Vertical">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#34495E"
                    Margin="0,0,0,10"
                    Text="Поточний штраф:" />
                <TextBlock
                    FontSize="16"
                    Foreground="#2C3E50"
                    Text="{Binding Room.Fine}"
                    Padding="8"
                    Width="200" />
            </StackPanel>

            <!-- Кнопка для збереження -->
            <Button
                Click="FineClick"
                Content="Зберегти"
                Height="45"
                Width="150"
                HorizontalAlignment="Center"
                Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
