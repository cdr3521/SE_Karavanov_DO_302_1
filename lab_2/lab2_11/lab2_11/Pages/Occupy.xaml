<Window
    Height="450"
    Title="Occupy"
    Width="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_11.Pages.Occupy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_11.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Фон градієнт  -->
    <Window.Background>
        <LinearGradientBrush EndPoint="1,2" StartPoint="0,0">
            <GradientStop Color="#EAECEE" Offset="0.0" />
            <GradientStop Color="#ABB2B9" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <!--  Додавання стилів із зовнішнього файлу  -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!--  Рамка для естетики  -->
        <Border
            Background="#F2F3F4"
            BorderBrush="#34495E"
            BorderThickness="2"
            CornerRadius="10"
            Margin="20"
            Padding="15">
            <StackPanel HorizontalAlignment="Center" Margin="10">
                <!--  Заголовок  -->
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Text="Заповнення даних студента" />

                <!--  ПІБ студента  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="ПІБ студента:" />
                <TextBox
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Text="{Binding Name}"
                    Width="250" />

                <!--  Кнопка зберегти  -->
                <Button
                    Click="OccupyClick"
                    Content="Зберегти"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Width="150" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
